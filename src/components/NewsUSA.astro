---
const response = await fetch(
  "https://newsapi.org/v2/top-headlines?country=us&apiKey=22c4a751fcbb4a9b869012a20633e9e9"
);

const data = await response.json();

const detail = "/detail/";
---

<div class="mt-2">
  <div class="row">
    <div class="col-lg-4">
      <div class="row">
        {
          data.articles ? (
            data.articles.slice(0, 6).map((item: any) => (
              <div class="col-lg-12 mb-4">
                <div class="card" style={{ width: "100%" }}>
                  <a href={"/detail/" + encodeURIComponent(item.title)}>
                    <img
                      src={
                        item.urlToImage ||
                        "https://icon-library.com/images/no-picture-available-icon/no-picture-available-icon-1.jpg"
                      }
                      alt="image"
                      class="card-img-top"
                    />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">{item.title}</h5>
                  </div>
                </div>
              </div>
            ))
          ) : (
            <div class="col-lg-12">
              <div class="alert alert-warning" role="alert">
                Content temporarily unavailable. Please try again later.
              </div>
            </div>
          )
        }
      </div>

      <div class="row">
        <div class="col-lg-12">
          {
            data.articles &&
              data.articles.slice(6, 11).map((item: any) => (
                <div class="card mb-4">
                  <a href={"/detail/" + encodeURIComponent(item.title)}>
                    <img
                      src={
                        item.urlToImage ||
                        "https://icon-library.com/images/no-picture-available-icon/no-picture-available-icon-1.jpg"
                      }
                      alt="image"
                      class="card-img-top"
                    />
                  </a>
                  <div class="card-body">
                    <h5 class="card-title">{item.title}</h5>
                  </div>
                </div>
              ))
          }
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      {
        data.articles &&
          data.articles.slice(11, 15).map((item: any) => (
            <div class="card mb-4">
              <a href={"/detail/" + encodeURIComponent(item.title)}>
                <img
                  src={
                    item.urlToImage ||
                    "https://icon-library.com/images/no-picture-available-icon/no-picture-available-icon-1.jpg"
                  }
                  alt="image"
                  class="card-img-top"
                />
              </a>
              <div class="card-body">
                <h5 class="card-title">{item.title}</h5>

                <div class="d-flex justify-content-between">
                  <p class="card-text">Source: {item.source.name}</p>
                  <p class="card-text">
                    Published: {new Date(item.publishedAt).toLocaleString()}
                  </p>
                </div>
                <p class="card-text">{item.description}</p>
              </div>
            </div>
          ))
      }
      {
        data.articles &&
          data.articles.slice(15, 18).map((item: any) => (
            <div class="card mb-4">
              <a href={"/detail/" + encodeURIComponent(item.title)}>
                <img
                  src={
                    item.urlToImage ||
                    "https://icon-library.com/images/no-picture-available-icon/no-picture-available-icon-1.jpg"
                  }
                  alt="image"
                  class="card-img-top"
                />
              </a>
              <div class="card-body">
                <h5 class="card-title">{item.title}</h5>

                <div class="d-flex justify-content-between">
                  <p class="card-text">Source: {item.source.name}</p>
                  <p class="card-text">
                    Published: {new Date(item.publishedAt).toLocaleString()}
                  </p>
                </div>
                <p class="card-text">{item.description}</p>
              </div>
            </div>
          ))
      }
    </div>
  </div>
</div>

<style>
  .btn-full-width {
    display: block;
    width: 100%;
    background-color: #594a42;
    color: white;
    text-decoration: none;
    padding: 10px 0;
    border: none;
    border-radius: 5px;
  }

  .btn-full-width:hover {
    background-color: #4c3f38;
  }

  .card {
    border-color: #594a42;
    box-shadow: 0px 4px 8px rgba(73, 31, 3, 0.4);
    background-color: #594a42;
    color: white;
  }
</style>
